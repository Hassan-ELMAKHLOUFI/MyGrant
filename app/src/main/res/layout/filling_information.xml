<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/complete_task_1" />


    <TextView
        android:id="@+id/Alert"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-60dp"
        android:elevation="8dp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />


    <RelativeLayout
        android:elevation="8dp"
        android:id="@+id/FirstPlayerPart"
        android:layout_width="340dp"
        android:layout_height="430dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/start">

        <TextView
            android:id="@+id/FirstPlayerName"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/logout_button"
            android:elevation="4dp"
            android:enabled="false"
            android:gravity="center"
            android:text="Filling Information"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/Infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FirstPlayerName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Please enter your information :"
            android:textColor="#E91E63"
            android:textSize="14dp"
            android:textStyle="bold" />




        <ScrollView
            android:layout_below="@id/Infos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nomText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="First Name :"
                    android:textColor="#000000"
                    android:textSize="24dp" />


                <EditText

                    android:id="@+id/nom"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/nomText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/input"

                    android:elevation="2dp"
                    android:gravity="center"
                    android:hint="Please enter your first name"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/prenomText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nom"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Last Name :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/prenom"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/prenomText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/input"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:hint="Please enter your last name"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prenom"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="National Identity Code :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/cin"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/cinText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/input"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:hint="Please enter your identity code"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textColor="#000000"
                    android:textSize="20sp"


                    />

                <TextView
                    android:id="@+id/cneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Student Id :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/cne"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/cneText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:hint="Veuillez entrez votre CNE"
                    android:inputType="text"

                    android:selectAllOnFocus="true"
                    
                    
                     />

                <TextView
                    android:id="@+id/etablissementText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cne"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Etablissement :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <Spinner
                    android:id="@+id/etablissement"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:layout_below="@id/etablissementText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:selectAllOnFocus="true"
                    android:text="Etablissement"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp"
                    
                    
                     />

                <TextView
                    android:id="@+id/datenaissanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etablissement"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Date de Naissance :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/datenaissance"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/datenaissanceText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:hint="Veuillez entrez votre date de Naissance"
                    android:inputType="date"
                    android:selectAllOnFocus="true"
                    
                    
                     />

                <TextView
                    android:id="@+id/notebacText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/datenaissance"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Note du Bac :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/notebac"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/notebacText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:hint="Veuillez entrez votre note de bac"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true" />

                <TextView
                    android:id="@+id/datebacText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notebac"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Date d'obtention du bac"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/datebac"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/datebacText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:hint="la date d'obtention du bac"
                    android:inputType="date"
                    android:selectAllOnFocus="true"
                    
                    
                     />

                <TextView
                    android:id="@+id/filiereText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/datebac"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="choisissez Filiére"
                    android:textColor="#000000"
                    android:textSize="24dp" />




                <Spinner
                    android:id="@+id/filiere"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:layout_below="@id/filiereText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:selectAllOnFocus="true"
                    android:text="Filiére"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp"


                    />










                <TextView
                    android:id="@+id/telText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filiere"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Telephone"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/tel"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/telText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:hint="numéro de telephone"
                    android:inputType="phone"
                    android:selectAllOnFocus="true" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Email :"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:background="@drawable/input"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_below="@id/emailText"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:hint="Veuillez entrez votre email"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="true" />

                <Button
                    android:id="@+id/enregistrer"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/email"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/logout_button"
                    android:elevation="4dp"
                    android:text="Valider"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="26dp" />

                <Button
                    android:id="@+id/valider"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/email"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/logout_button"
                    android:elevation="4dp"
                    android:text="Enregistrer"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="26dp"
                    android:onClick="btn"
                    />
            </RelativeLayout>
        </ScrollView>




    </RelativeLayout>





</RelativeLayout>